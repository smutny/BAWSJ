<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="195.0" prefWidth="280.0"
      xmlns="http://javafx.com/javafx/8">
    <children>
        <MenuBar fx:id="menuBar"/>
        <HBox>
            <children>
                <VBox>
                    <children>
                        <BorderPane>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <center>
                                <TextField BorderPane.alignment="CENTER" prefHeight="30.0" prefWidth="100.0"
                                           fx:id="resultTextField" editable="false"/>
                            </center>
                        </BorderPane>

                        <BorderPane BorderPane.alignment="CENTER" prefHeight="167.0" prefWidth="280.0">
                            <center>
                                <GridPane BorderPane.alignment="CENTER">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Button mnemonicParsing="false" text="7" fx:id="num7Button"/>
                                        <Button GridPane.columnIndex="1" mnemonicParsing="false" text="8"
                                                fx:id="num8Button"/>
                                        <Button GridPane.columnIndex="2" mnemonicParsing="false" text="9"
                                                fx:id="num9Button"/>
                                        <Button GridPane.rowIndex="1" mnemonicParsing="false" text="4"
                                                fx:id="num4Button"/>
                                        <Button GridPane.columnIndex="1" GridPane.rowIndex="1"
                                                mnemonicParsing="false" text="5" fx:id="num5Button"/>
                                        <Button GridPane.columnIndex="2" GridPane.rowIndex="1"
                                                mnemonicParsing="false" text="6" fx:id="num6Button"/>
                                        <Button GridPane.rowIndex="2" mnemonicParsing="false" text="1"
                                                fx:id="num1Button"/>
                                        <Button GridPane.columnIndex="1" GridPane.rowIndex="2"
                                                mnemonicParsing="false" text="2" fx:id="num2Button"/>
                                        <Button GridPane.columnIndex="2" GridPane.rowIndex="2"
                                                mnemonicParsing="false" text="3" fx:id="num3Button"/>
                                        <Button GridPane.columnIndex="1" GridPane.rowIndex="3"
                                                mnemonicParsing="false" text="0" fx:id="num0Button"/>
                                        <Button GridPane.columnIndex="2" GridPane.rowIndex="3"
                                                mnemonicParsing="false" text="usuń" fx:id="deleteButton"/>
                                    </children>
                                </GridPane>
                            </center>
                        </BorderPane>
                    </children>
                </VBox>
                <GridPane BorderPane.alignment="CENTER" prefHeight="136.0" prefWidth="120.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"
                                           halignment="RIGHT"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button GridPane.rowIndex="0" alignment="CENTER" mnemonicParsing="false"
                                prefWidth="100.0" text="wypłać" fx:id="withdrawMoneyButton"/>
                        <Button GridPane.rowIndex="1" mnemonicParsing="false" prefWidth="100.0"
                                text="wpłać" fx:id="depositMoneyButton"/>
                        <Button GridPane.rowIndex="2" mnemonicParsing="false" prefWidth="100.0"
                                text="zmień PIN" fx:id="changePINButton"/>
                        <Button GridPane.rowIndex="4" mnemonicParsing="false" prefWidth="100.0"
                                text="włóż kartę" fx:id="insertCardButton"/>
                        <Button GridPane.rowIndex="5" mnemonicParsing="false" prefWidth="100.0"
                                text="wyciągnij kartę" fx:id="removeCardButton"/>
                    </children>
                </GridPane>
            </children>
        </HBox>

        <Label text="stan konta: " fx:id="accountBalanceLabel"/>
    </children>
</VBox>
